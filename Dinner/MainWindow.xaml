<Window x:Class="Dinner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dinner"
        mc:Ignorable="d"
        Title="Dinner" Height="450" Width="800">
    <Grid>
        <Button x:Name="StartSimButton" Content="Start" HorizontalAlignment="Left" Margin="22,29,0,0" VerticalAlignment="Top" Width="75" Click="StartSimButton_Click"/>
        <Button x:Name="StopSimbutton" Content="Stop" HorizontalAlignment="Left" Margin="117,29,0,0" VerticalAlignment="Top" Width="75" Click="StopSimbutton_Click"/>
        <Button x:Name="PauseSimButton" Content="Pause" HorizontalAlignment="Left" Margin="210,29,0,0" VerticalAlignment="Top" Width="75" Click="PauseSimButton_Click"/>
    </Grid>
</Window>
